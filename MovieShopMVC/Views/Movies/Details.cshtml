<link rel=”stylesheet” href=”https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css” />
<link rel=”stylesheet” href=”https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css”/>

@model ApplicationCore.Models.MovieDetailsModel

<style>
.container
{
   width: 130%; height: 100%;
}

.castli
{
    
    
    
}


</style>
<div class="container">
  <div class="row header" style="background: linear-gradient( rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6) ), url('@Model.BackdropUrl');background-size: cover"  >
    <div class="col-4">
      <img src="@Model.PosterUrl" alt="@Model.Title" >
    </div>
    <div class="col-5">
        <div class ="row header title" style = "color:white; margin-top:2%">
            <h1>
                @Model.Title 
            </h1>
        </div>

        <div class = "row header tagline" style = "color:lightgray; margin-top:2%">
            <a>@Model.Tagline</a>
        </div>

        <div class = "row header runtime" >
            
            <a style = "color:lightgray; margin-top:2%">
                @Model.RunTime m | @Model.ReleaseDate.Value.Year 
            @foreach(var genres in Model.Genres)
            {
                @*<a href="#" class="badge rounded-pill bg-secondary">@genres.Name</a>*@
                    <span class="badge rounded-pill bg-secondary " style="width: auto; margin-left:1%; ">@genres.Name</span>
            }
            </a>
            </div>
        
        <div class = "row header rating" style = "color:lightgray; margin-top:2%">
            <a>
                Rating
            </a>
        </div>
        
        <div class = "row header overivew" style = "color:white; margin-top:2%">
            <p>
                @Model.Overview
            </p>
        </div>
    </div>

    <div class="col-3">
        <div class ="d-grid gap-4 col-6  row buttonreview" style = "margin-top:30%">
            <button type="button" class="btn btn-outline-secondary" style="color:white ">REVIEW</button>
            <button type="button" class="btn btn-light">BUY $@Model.Price</button>
        </div>
        
    </div>
  </div>

  <div class="row bot">
    <div class="col-4">
        <div class = "row moviefacts">
            <ul calss ="list-group list-group-flush">
                <li class="list-group-item bg-light">
                    <h5>MOVIE FACTS</h5>
                </li>

                <li class ="list-group-item" >
                    Release Date <span class="badge rounded-pill bg-secondary">@Model.ReleaseDate.Value.ToString("MMM d, yyyy")</span>
                </li>

                <li class ="list-group-item" >
                    Run Time <span class="badge rounded-pill bg-secondary">@Model.RunTime m</span>
                </li>

                <li class ="list-group-item" >
                    Box Office <span class="badge rounded-pill bg-secondary">$@Model.Revenue</span>
                </li>

                <li class ="list-group-item" >
                   Budget <span class="badge rounded-pill bg-secondary">$@Model.Budget</span>
                </li>
            </ul>

        </div>

        <div class = "row trailers">
            <ul calss ="list-group list-group-flush">
               
                <li class="list-group-item bg-light">
                        <h5>Trailers</h5>
                 </li>

                 @foreach(var trailers in Model.Trailers)
                    {
                        <li class ="list-group-item" >
                            <a href="@trailers.TrailerUrl" style="text-decoration: none; color:gray">@trailers.Name</a>
                        </li>
                    
                    }     
            </ul>
        </div>
    </div>

    <div class="col-8">
        <ul class ="list-group list-group-flush">
            <li class="list-group-item">
                <h5>
                    CAST
                </h5>
            </li>
            
            @foreach (var casts in Model.Casts)
            {
                <li class = "list-group-item">
                    <ul class ="list-group list-group-horizontal list-group-flush">
                        <li class="list-group-item border-0"  style = "width: 20%" @*style="background:url('@casts.ProfilePath');border-radius: 50%; background-size: cover; "*@>
                            <img src = "@casts.ProfilePath"  style="width:30%;border-radius: 50%"/>

                        </li>
                        <li class="list-group-item border-0 " style = " width:30%">
                            @casts.Name
                        </li>
                        <li class="list-group-item border-0" style = "">
                            @casts.Character
                        </li>
                    </ul>
                </li>
            }
            </ul>
    </div>
    

  </div>
</div>