        @Model.Title
        <br/>
        <a>Price: $@Model.Price</a>
      </div>
      <div class="modal-footer">
        
        <button type="button" class="btn btn-primary">Purcahse</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
